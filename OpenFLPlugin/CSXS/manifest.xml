<?xml version="1.0" encoding="UTF-8"?>

<ExtensionManifest Version="4.0" ExtensionBundleId="org.openfl.OpenFLExtension" ExtensionBundleVersion="1.0.0"
		ExtensionBundleName="OpenFL Extension" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<ExtensionList>
		<Extension Id="org.openfl.OpenFLPlugin.PublishSettings" Version="1.0" />
		<Extension Id="org.openfl.OpenFLPlugin" Version="1.0" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
			<Host Name="FLPR" Version="14.1" />
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="4.0" />

		</RequiredRuntimeList>
	</ExecutionEnvironment>
	<DispatchInfoList>
		<Extension Id="org.openfl.OpenFLPlugin">
			<DispatchInfo >
				<Resources>
				<MainPath>./plugin/fcm.xml</MainPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>OpenFLPlugin</Menu>
					<Geometry>
						<Size>
							<Height>200</Height>
							<Width>200</Width>
						</Size>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
		<Extension Id="org.openfl.OpenFLPlugin.PublishSettings">
			<DispatchInfo >
				<Resources>
				<MainPath>./index.html</MainPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>ModalDialog</Type>
					<Menu>Publish Settings (OpenFL)</Menu>
					<Geometry>
						<Size>
							<Height>512</Height>
							<Width>486</Width>
						</Size>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>